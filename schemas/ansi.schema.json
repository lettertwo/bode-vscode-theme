{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/lettertwo/bode-vscode-theme/schemas/ansi.schema.json",
  "type": "object",
  "properties": {
    "normal": {
      "type": "object",
      "properties": {
        "blue": {"type": "string", "format": "color-hex"},
        "cyan": {"type": "string", "format": "color-hex"},
        "green": {"type": "string", "format": "color-hex"},
        "magenta": {"type": "string", "format": "color-hex"},
        "red": {"type": "string", "format": "color-hex"},
        "yellow": {"type": "string", "format": "color-hex"}
      },
      "required": ["blue", "cyan", "green", "magenta", "red", "yellow"],
      "additionalProperties": false
    },
    "bright": {
      "type": "object",
      "properties": {
        "blue": {"type": "string", "format": "color-hex"},
        "cyan": {"type": "string", "format": "color-hex"},
        "green": {"type": "string", "format": "color-hex"},
        "magenta": {"type": "string", "format": "color-hex"},
        "red": {"type": "string", "format": "color-hex"},
        "yellow": {"type": "string", "format": "color-hex"}
      },
      "required": ["blue", "cyan", "green", "magenta", "red", "yellow"],
      "additionalProperties": false
    }
  },
  "required": ["normal", "bright"],
  "additionalProperties": false
}
